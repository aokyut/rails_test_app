<p id="notice"><%= notice %></p>

<h1>Kijis</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kijis.each do |kiji| %>
      <tr>
        <td><%= kiji.title %></td>
        <td><%= kiji.content %></td>
        <td><%= kiji.user_id %></td>
        <td><%= link_to 'Show', kiji %></td>
        <td><%= link_to 'Edit', edit_kiji_path(kiji) %></td>
        <td><%= link_to 'Destroy', kiji, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

